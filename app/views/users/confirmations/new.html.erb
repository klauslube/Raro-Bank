<%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f| %>
  <%= render partial: 'shared/notifications/form_errors', locals: { object: resource } %>
  <div class='users-form-container item'>
    <div class='users-form-title-container'>
      <h1 class='users-form-title'><%= t('.resend_confirm_title') %></h1>
      <p class='users-form-subtitle'>Libere seu acesso! Insira o seu e-mail novamente para o reenvio do link de confirmação.</p>
    </div>

    <div class='field'>
      <%= f.label 'E-mail', class: 'users-input-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: 'email', placeholder: 'Digite seu e-mail', value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'users-input-field' %>
    </div>

    <%= f.button class: 'users-form-submit-container' do %>
      <div class='w-4 h-8'></div>
      <span> <%= f.submit t('.resend_confirm') %></span>
      <div class='w-4 h-8'></div>
    <% end %>
  </div>
<% end %>
