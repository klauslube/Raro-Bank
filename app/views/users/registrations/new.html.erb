<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render partial: 'shared/notifications/form_errors', locals: { object: resource } %>

  <div class='users-form-container'>
    <div class='users-form-title-container'>
      <h1 class='users-form-title'>Cadastre-se</h1>
      <p class='users-form-subtitle'>Registre-se agora para começar a fazer suas raracoins valerem</p>
    </div>

    <div class='flex justify-between gap-1'>
      <div class="users-form-field">
        <%= f.label :name, class: 'users-input-label' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'users-input-field', placeholder: 'Digite seu nome' %>
      </div>

      <div class="users-form-field">
        <div class='flex items-center justify-between'>
          <%= f.label :cpf, class: 'users-input-label uppercase' %>
          <span class='text-xs'>Somente dígitos</span>
        </div>
        <%= f.text_field :cpf, autofocus: true, class: 'users-input-field', placeholder: 'Digite seu CPF' %>
      </div>
    </div>

    <div class="users-form-field">
      <%= f.label "E-mail", class: 'users-input-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'users-input-field', placeholder: 'Digite seu e-mail' %>
    </div>

    <div class='flex justify-between gap-6'>
      <div data-controller="password-visibility" class="users-input-container">
        <%= f.label :password, class: 'users-input-label' %>

        <div class="users-input-group">
          <%= f.password_field :password, autocomplete: "new-password", placeholder: 'Digite sua senha', data: { password_visibility_target: "input" }, spellcheck: false, class: "users-input-inside" %>

          <button type="button" data-action="password-visibility#toggle">
            <%= inline_svg_tag 'icons/solid/eye.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button' %>
            <%= inline_svg_tag 'icons/solid/eye-slash.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button', class: 'hidden' %>
          </button>
        </div>
      </div>

      <div data-controller="password-visibility" class="users-input-container">
        <%= f.label :password_confirmation, class: 'users-input-label' %>

        <div class="users-input-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirme sua senha', data: { password_visibility_target: "input" }, spellcheck: false, class: "users-input-inside" %>

          <button type="button" data-action="password-visibility#toggle">
            <%= inline_svg_tag 'icons/solid/eye.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button' %>
            <%= inline_svg_tag 'icons/solid/eye-slash.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button', class: 'hidden' %>
          </button>
        </div>
      </div>
    </div>
    <span class='text-xs'>Misture letras e número com pelo menos 8 caracteres</span>
    <%= f.button class: 'users-form-submit-container' do %>
      <%= inline_svg_tag 'icons/solid/lock-closed.svg', class: 'w-4 h-8 text-primary-800' %>
      <span>Login</span>
      <div class='w-4 h-8'></div>
    <% end %>

    <div class='flex items-end gap-2'>
      <span class='text-sm'>Já tem uma conta?</span>
      <%= link_to "Faça login!", new_user_session_path, class: "users-form-link" %>
    </div>
  </div>
<% end %>
