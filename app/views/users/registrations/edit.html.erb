<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render partial: 'shared/notifications/form_errors', locals: { object: resource } %>
  <div class='users-form-container'>
    <div class='users-form-title-container'>
      <h1 class='users-form-title'>Editar cadastro</h1>
    </div>

    <div class='flex justify-between gap-1'>
      <div class="users-form-field">
        <%= f.label :name, class: 'users-input-label' %>
        <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'users-input-field', placeholder: 'Digite seu nome' %>
      </div>

      <div class="users-form-field">
        <div class='flex items-center justify-between'>
          <%= f.label :cpf, class: 'users-input-label uppercase' %>
          <span class='text-xs'>Somente dígitos</span>
        </div>
        <%= f.text_field :cpf, autofocus: true, class: 'users-input-field', placeholder: 'Digite seu CPF' %>
      </div>
    </div>

    <div class="users-form-field">
      <%= f.label "E-mail", class: 'users-input-label' %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'users-input-field', placeholder: 'Digite seu e-mail' %>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
    <% end %>

    <div class='flex justify-between gap-6'>
      <div data-controller="password-visibility" class="users-input-container">
        <%= f.label 'Nova senha', class: 'users-input-label' %>
        <div class="users-input-group">
          <%= f.password_field :password, autocomplete: "new-password",placeholder: 'Digite sua nova senha', data: { password_visibility_target: "input" }, spellcheck: false, class: "users-input-inside" %>

          <button type="button" data-action="password-visibility#toggle">
            <%= inline_svg_tag 'icons/solid/eye.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button' %>
            <%= inline_svg_tag 'icons/solid/eye-slash.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button', class: 'hidden' %>
          </button>
        </div>
      </div>

      <div data-controller="password-visibility" class="users-input-container">
        <%= f.label 'Confirme a nova senha', class: 'users-input-label' %>

        <div class="users-input-group">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder: 'Confirme sua nova senha', data: { password_visibility_target: "input" }, spellcheck: false, class: "users-input-inside" %>

          <button type="button" data-action="password-visibility#toggle">
            <%= inline_svg_tag 'icons/solid/eye.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button' %>
            <%= inline_svg_tag 'icons/solid/eye-slash.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button', class: 'hidden' %>
          </button>
        </div>
      </div>
    </div>
    <span class='text-xs'>Utilize 8 caracteres entre letras, números e caracter especial</span>

    <div data-controller="password-visibility" class="users-input-container">
      <%= f.label :current_password, class: 'users-input-label' %>

      <div class="users-input-group">
        <%= f.password_field :current_password, class: 'users-input-field', autocomplete: "current-password", placeholder: 'Digite sua senha atual para prosseguir', data: { password_visibility_target: "input" }, spellcheck: false, class: "users-input-inside" %>

        <button type="button" data-action="password-visibility#toggle">
          <%= inline_svg_tag 'icons/solid/eye.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button' %>
          <%= inline_svg_tag 'icons/solid/eye-slash.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button', class: 'hidden' %>
        </button>
      </div>
    </div>

    <div class='flex justify-between items-center w-full gap-6'>
      <%= button_to registration_path(resource_name), method: :delete, class: 'users-button-danger', data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" } do %>
        <div class='w-4 h-8'></div>
        Deletar conta
        <div class='w-4 h-8'></div>
      <% end %>
      <%= f.button class: 'users-form-submit-container' do %>
        <div class='w-4 h-8'></div>
        <span>Salvar</span>
        <div class='w-4 h-8'></div>
      <% end %>
    </div>
  </div>
<% end %>
