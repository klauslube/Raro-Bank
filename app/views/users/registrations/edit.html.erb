<h2>Edit <%= resource_name.to_s.humanize %></h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render partial: 'shared/notifications/form_errors', locals: { object: resource } %>

  <div class="users-form-field">
    <%= f.label :name, class: 'users-input-label' %>
    <%= f.text_field :name, autofocus: true, autocomplete: "name", class: 'users-input-field' %>
  </div>

  <div class="users-form-field">
    <%= f.label :cpf, class: 'users-input-label' %>
    <%= f.text_field :cpf, autofocus: true, class: 'users-input-field' %>
  </div>

  <div class="users-form-field">
    <%= f.label 'E-mail', class: 'users-input-label' %>
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'users-input-field' %>
  </div>

  <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
    <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
  <% end %>

  <div data-controller="password-visibility" class="users-input-container">
    <%= f.label :password, class: 'users-input-label' %><i>(leave blank if you don't want to change it)</i>

    <div class="users-input-group">
      <%= f.password_field :password, autocomplete: "new-password", data: { password_visibility_target: "input" }, spellcheck: false, class: "users-input-inside" %>

      <button type="button" data-action="password-visibility#toggle">
        <%= inline_svg_tag 'icons/solid/eye.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button' %>
        <%= inline_svg_tag 'icons/solid/eye-slash.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button', class: 'hidden' %>
      </button>
    </div>
    <% if @minimum_password_length %>

      <em><%= @minimum_password_length %> characters minimum</em>
    <% end %>
  </div>

  <div data-controller="password-visibility" class="users-input-container">
    <%= f.label :password_confirmation, class: 'users-input-label' %>

    <div class="users-input-group">
      <%= f.password_field :password_confirmation, autocomplete: "new-password", data: { password_visibility_target: "input" }, spellcheck: false, class: "users-input-inside" %>

      <button type="button" data-action="password-visibility#toggle">
        <%= inline_svg_tag 'icons/solid/eye.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button' %>
        <%= inline_svg_tag 'icons/solid/eye-slash.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button', class: 'hidden' %>
      </button>
    </div>
  </div>

  <div data-controller="password-visibility" class="users-input-container">
    <%= f.label :current_password, class: 'users-input-label' %>

    <div class="users-input-group">
      <%= f.password_field :current_password, class: 'users-input-field', autocomplete: "current-password", data: { password_visibility_target: "input" }, spellcheck: false, class: "users-input-inside" %>

      <button type="button" data-action="password-visibility#toggle">
        <%= inline_svg_tag 'icons/solid/eye.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button' %>
        <%= inline_svg_tag 'icons/solid/eye-slash.svg', data: { password_visibility_target: "icon" }, class: 'users-input-inside-button', class: 'hidden' %>
      </button>
    </div>
  </div>

  <div class="actions">
    <%= f.submit "Update" %>
  </div>
<% end %>

<h3>Cancel my account</h3>

<div>Unhappy? <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %></div>

<%= link_to "Back", :back %>
