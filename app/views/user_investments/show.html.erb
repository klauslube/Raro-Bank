<h2>Investimento #<%= @user_investment.id %></h2> 
<table>
  <thead>
    <tr>
      <th scope="col">Id</th>
      <th scope="col">Name</th>
      <th scope="col">Minimum Amount</th>
      <th scope="col">Expiration Date</th>
      <th scope="col">Index</th>
      <th scope="col">Category</th>
      <th scope="col">Profit</th>
      <th scope="col">Initial amount</th>
      <th scope="col">Purchase Date</th>
    </tr>
  </thead>
  <tbody>
      <tr>
        <td><%= @user_investment.id %></td>
        <td><%= @user_investment.investment.name %></td>
        <td><%= @user_investment.investment.minimum_amount %></td>
        <td><%= @user_investment.investment.expiration_date %></td>
        <td><%= @user_investment.investment.indicator.rate %></td> 
        <td><%= @user_investment.investment.premium ? 'Premium' : 'Free' %> 
        <td><%= @user_investment.profit %></td>
        <td><%= @user_investment.initial_amount %></td>
        <td><%= @user_investment.created_at.strftime('%d/%m/%y') %></td>
      </tr>
  </tbody>
</table>



<div>
  <%= button_to "Resgatar", @user_investment, data: { confirm: "Você tem certeza?", turbo_confirm: "Você tem certeza?" }, method: :delete %>
  <%= link_to "Voltar", user_investments_path %>
</div>
