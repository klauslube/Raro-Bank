<p style="color: green"><%= notice %></p>

<h1>Classrooms</h1>

<% if @classrooms.blank? %>
  <p> There are no classrooms yet. </p>
<% end %>

<div id="classrooms">
  <table >
    <thead>
      <tr>
        <th>Nome</th>
        <th>Data Inicio</th>
        <th>Data Fim</th>
      </tr>
    </thead>
    <tbody>
      <% @classrooms.each do |classroom| %>
        <%= render partial: 'admin/classrooms/classroom', locals: { classroom: classroom }  %>
        <tr>
          <td><%= classroom.name %></td>
          <td><%= classroom.start_date.strftime('%d/%m/%Y') %></td>
          <td><%= classroom.end_date.strftime('%d/%m/%Y') %></td>
          <td>
            <div>
              <%= link_to "Editar", edit_admin_classroom_path(classroom.id)%>
              <%= button_to "Deletar", admin_classroom_path(classroom), method: :delete, data: { confirm: "Are you sure?", turbo_confirm: "Are you sure you want to delete this classroom?"} %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= link_to  "New classroom", new_admin_classroom_path %>
