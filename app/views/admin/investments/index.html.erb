<div class="px-4 sm:px-6 lg:px-8", style="padding: 0">
  <div class="sm:flex sm:items-center">
    <%= link_to "Novo Investimento", new_admin_investment_path(@investment) %>
  </div>
  <div class="mt-8 flow-root">
    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="overflow-hidden shadow ring-1 ring-black ring-opacity-5 sm:rounded-lg">
          <table class="min-w-full divide-y divide-gray-300">
            <thead class="bg-gray-50">
              <tr>
                <th scope="col" class="py-3.5 pl-4 pr-3 text-left text-sm font-semibold text-gray-900 sm:pl-6">Id</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Name</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Minimum Amount</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Expiration Date</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Index</th>
                <th scope="col" class="px-3 py-3.5 text-left text-sm font-semibold text-gray-900">Category</th>
              </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-white">
            <% @investments.each do |investment| %>
              <tr>
                <td class="whitespace-nowrap py-4 pl-4 pr-3 text-sm font-medium text-gray-900 sm:pl-6"><%= investment.id %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= investment.name %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= investment.minimum_amount %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= investment.expiration_date %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= investment.income %></td>
                <td class="whitespace-nowrap px-3 py-4 text-sm text-gray-500"><%= investment.premium %></td>

                <td class="relative whitespace-nowrap py-4 pl-3 pr-4 text-right text-sm font-medium sm:pr-6">
                  <%= link_to "Detalhes", admin_investment_path(investment), class: "text-indigo-600 hover:text-indigo-900" %>
                </td>
              </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
