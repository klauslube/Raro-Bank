<div class='flex flex-col w-full h-full'>
  <%= render 'home/article' %>

  <section class="flex flex-col items-center justify-between h-full mb-10">
    <h3 class="p-4 text-2xl font-bold text-center text-primary-600"><%= t('home.title') %></h3>
    <div class="flex flex-row items-center justify-center h-full px-32 space-x-10">
      <%= link_to transactions_path, class:'user-card-container' do %>
        <span class="user-card-icon">
          <%= inline_svg_tag 'icons/solid/list.svg', class: 'w-full h-full text-white' %>
        </span>
        <span class="user-card-text"><%= t('links.extract') %></span>
      <% end %>
      <%= link_to catalogs_path, class:'user-card-container' do %>
        <span class="user-card-icon">
          <%= inline_svg_tag 'icons/solid/arrow-trending-up.svg', class: 'w-full h-full text-white' %>
        </span>
        <span class="user-card-text"><%= t('links.invest') %></span>
      <% end %>
      <%= link_to new_transaction_path, class:'user-card-container' do %>
        <span class="user-card-icon">
          <%= inline_svg_tag 'icons/solid/arrows-right-left.svg', class: 'w-full h-full text-white' %>
        </span>
        <span class="user-card-text"><%= t('links.transfer') %></span>
      <% end %>

    </div>
  </div>
</section>
</div>
